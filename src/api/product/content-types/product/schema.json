{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "maxLength": 20,
      "minLength": 3
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 3,
      "maxLength": 100
    },
    "Description": {
      "type": "text",
      "required": true,
      "maxLength": 110,
      "minLength": 20
    },
    "Image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "T-shirt",
        "Mug",
        "Sticker",
        "Pants"
      ],
      "default": "T-shirt",
      "required": true
    },
    "Size": {
      "type": "string"
    },
    "Colour": {
      "type": "enumeration",
      "enum": [
        "Red ",
        "Blue",
        "Black",
        "White",
        "Green ",
        "Yellow"
      ]
    },
    "Price": {
      "type": "integer",
      "required": true
    },
    "AvilableQTY": {
      "type": "integer",
      "required": true
    }
  }
}
